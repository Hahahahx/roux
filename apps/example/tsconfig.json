{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "strict": false,
        "sourceMap": true,
        "outDir": "build",
        "esModuleInterop": true,
        "baseUrl": "src",
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
